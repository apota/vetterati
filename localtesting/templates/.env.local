# Environment variables for local development
# Copy this file to .env.local in your service directory and modify as needed

# Database Configuration
DATABASE_URL=postgresql://ats_user:ats_password@localhost:5432/vetterati_ats

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# RabbitMQ Configuration
RABBITMQ_URL=amqp://ats_user:ats_password@localhost:5672

# LocalStack/AWS Configuration
AWS_ENDPOINT_URL=http://localhost:4566
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET_NAME=vetterati-resumes

# SNS/SQS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:vetterati-notifications
SQS_QUEUE_URL=http://localhost:4566/000000000000/vetterati-notifications

# Service URLs (for service-to-service communication)
AUTH_SERVICE_URL=http://localhost:5001
RESUME_SERVICE_URL=http://localhost:8001
AHP_SERVICE_URL=http://localhost:5002
WORKFLOW_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003
JOB_SERVICE_URL=http://localhost:8004
CANDIDATE_SERVICE_URL=http://localhost:8005
NOTIFICATION_SERVICE_URL=http://localhost:8006

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
ENVIRONMENT=local

# JWT Configuration (for .NET services)
JWT_SECRET_KEY=your-super-secret-jwt-key-for-docker-that-is-at-least-32-characters-long-and-secure
JWT_ISSUER=vetterati-ats
JWT_AUDIENCE=vetterati-ats

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=local
